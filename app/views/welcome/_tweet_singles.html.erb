<div class="single_sentiment_board">
    <% counter = 0  %>
    <% @sentiments.zip(@tweets) do |sentiment, tweet| %>
      <div class="container_board" id="sentiment-<%= counter %>">
        <p> Emoji Sentiment </p>
        <div class="row">
          <span class="single_emoji"><%= tweet[0][0] %></span>
          <span class="single_emoji_sentiment count"><%= sentiment %></span>
        </div>
        <div class="sentiment_bar">
          <i class="fa fa-caret-up" aria-hidden="true"></i><span class="sentiment-number"><%= sentiment %></span>
        </div>
      </div>
      <% counter += 1  %>
    <% end %>
</div>
